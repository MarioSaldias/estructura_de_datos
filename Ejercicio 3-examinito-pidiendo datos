#Crear un archivo incluyendo los datos de los clientes de una tineda de conveniencia
import os
print("\nCrear un archivo")
print("===============")
NOMBRE_ARCHIVO='datos.txt'
archivo=open(NOMBRE_ARCHIVO, 'w')
archivo.write('\n                                    Tienda de Amiga')
nombre=input("Ingrese un nombre: ")
apellido=input("Ingrese un apellido: ")
genero=input("Ingrese el genero del cliente: ")
fechadenac=input("Ingrese la fecha de nacimiento del cliente: ")
edad=input("Ingrese la edad del cliente: ")
CI=input("Ingrese el CI o Razòn social del cliente: ")
archivo.write('\n')
archivo.write('\n|  CI o Razon social    |  Gènero   | Edad |  Nombre  |  Apellido  | Fecha de Nacimiento|')
archivo.write('\n')
archivo.write(             CI)
archivo.write('\n')
archivo.write(                               genero)
archivo.write('\n')
archivo.write(                                          edad)
archivo.write('\n')
archivo.write(                                                nombre)
archivo.write('\n')
archivo.write(                                                             apellido)
archivo.write('\n')
archivo.write(                                                                           fechadenac)
archivo.close()
